{
    "name": "catreviews",
    "displayName": "Cat Reviews",
    "description": "Cats review your code!",
    "version": "1.5.0",
    "publisher": "okanaslan",
    "icon": "assets/lvl6cat1.gif",
    "homepage": "https://github.com/okanaslan/cat-reviews",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/okanaslan/cat-reviews"
    },
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "custom-activitybar",
                    "title": "Cat Reviews",
                    "icon": "assets/icon.svg"
                }
            ]
        },
        "views": {
            "custom-activitybar": [
                {
                    "type": "webview",
                    "id": "vscodeSidebar.openview",
                    "name": "Reviewing...",
                    "icon": "assets/icon.svg",
                    "contextualTitle": "ðŸ˜º"
                }
            ]
        },
        "commands": [
            {
                "command": "catReviews.openCatReviews",
                "category": "Cat Reviews",
                "title": "Open Cat Reviews"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc",
        "lint": "eslint src --ext ts",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@types/node": "22.x",
        "@types/vscode": "^1.100.0",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "eslint": "^9.27.0",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "vscode-uri": "^3.1.0"
    }
}
